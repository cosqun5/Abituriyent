@*@model Abituriyent.Models.View_Models.UniversitetViewModel*@

@{
    ViewBag.Title = "UniversitetUpdate";
    Layout = "~/Views/shared/Admin.cshtml";
}
@using Abituriyent.Models
@model Universitet
<div class="card card-custom gutter-b example example-compact">
    <form method="post" action="~/Admin/UniversitetUpdate/@Model.UniversitetId">
        <div class="card-body">


            <div class="form-group" style="width:20%; float:left;margin-left:10px;">
                <label>
                    Universitetin Ad
                    <span class="text-danger">*</span>
                </label>
                <input type="text" class="form-control" placeholder="Universitetin Adı" name="Ad" value="@Model.Ad" />
            </div>

            <div class="duyme" style="float:left;width:100%; margin-bottom:20px;">
                <button type="submit" value="Send message" class="btn btn-success">Send Message</button>
            </div>
        </div>
    </form>
</div>
